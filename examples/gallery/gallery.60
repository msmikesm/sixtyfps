import { Button, CheckBox, SpinBox, Slider, GroupBox, LineEdit, StandardListView, ComboBox } from "sixtyfps_widgets.60";

App := Window {
    width: 500px;
    height: 700px;
    Rectangle {
        color: #ecedeb;
        width: parent.width;
        height: parent.height;
    }

    VerticalLayout {
        padding: 20px;
        spacing: 20px;

        HorizontalLayout {
            VerticalLayout {
                padding: 0px;
                spacing: 0px;
                horizontal-stretch: 1;
                Text {
                    text: "Below are some of the standard widgets that";
                }
                Text {
                    text: "application developers can easily re-use.";
                }
            }

            disable_toggle := CheckBox {
                checked: false;
                text: "Disable Widgets";
            }
        }

        HorizontalLayout {
            alignment: start;
            GroupBox {
                title: "Button";

                Button {
                    text: "Regular Button";
                    enabled: !disable_toggle.checked;
                }
            }
        }

        HorizontalLayout {
            alignment: start;
            GroupBox {
                title: "CheckBox";
                checkbox := CheckBox {
                    text: checkbox.checked ? "(checked)" : "(unchecked)";
                    checked: true;
                }
            }
        }

        HorizontalLayout {
            alignment: start;
            GroupBox {
                title: "SpinBox";
                SpinBox {
                    value: 42;
                }
            }

            GroupBox {
                title: "ComboBox";
                ComboBox {
                    model: ["Select Something", "From this", "Combobox"];
                    enabled: !disable_toggle.checked;
                }
            }
        }

        GroupBox {
            title: "Slider";
            Slider {
                value: 42;
            }
        }

        GroupBox {
            title: "LineEdit";
            LineEdit {
                placeholder-text: "Enter some text";
                enabled: !disable_toggle.checked;
            }
        }

        GroupBox {
            title: "StandardListView";
            StandardListView {
                model: [
                    {text: "Lorem"}, {text: "ipsum"},{text: "dolor"},{text: "sit"},{text: "amet"},{text: "consetetur"},
                    {text: "Lorem"}, {text: "ipsum"},{text: "dolor"},{text: "sit"},{text: "amet"},{text: "consetetur"},
                ];
            }
        }
    }
}

